<p id="notice"><%= notice %></p>

<h1>Tarefas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Inicio</th>
      <th>Previsao</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefas.each do |tarefa| %>
      <tr>
        <td><%= tarefa.nome %></td>
        <td><%= tarefa.descricao %></td>
        <td><%= tarefa.inicio.strftime("%d/%m/%y") %></td>
        <td><%= tarefa.previsao.strftime("%d/%m/%y") %></td>
        <td><%= tarefa.status %></td>
        <td><%= link_to 'Visualizar', tarefa %></td>
        <td><%= link_to 'Editar', edit_tarefa_path(tarefa) %></td>
        <td><%= link_to 'Excluir', tarefa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

